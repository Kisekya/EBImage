useDynLib(EBImage)

importFrom("methods", "Ops")
importFrom("methods", "show")
importFrom("graphics", "image")
importFrom("graphics", "hist")
importFrom("stats", "median")

## classes
exportClasses(Image)

## image class, accessors
export(Image, is.Image, as.Image, print.Image)
export(Grayscale, TrueColor, Color)
exportMethods(Ops, "[")
export(colorMode, "colorMode<-", imageData, "imageData<-")
export(getNumberOfFrames)

## image IO, display
export(readImage, writeImage, display, show, animate)

## spatial transform
export(resize, rotate)
export(flip, flop)
export(translate)

## image analysis, segmentation
export(bwlabel, ocontour)
export(thresh)

## statistics
export(median.Image, quantile.Image)
exportMethods(hist)

## image filtering, enhancement
export(filter2)
export(equalize)
export(blur, gblur)
export(normalize)
        
## morphological operations
export(makeBrush)
export(erode, dilate, opening, closing)
export(distmap)
export(watershed, propagate)
export(floodFill, fillHull)

## colorspace
export(rgbImage, channelMix, channel)

## image stacking, tiling
export(stackObjects)
export(combine, tile, untile)

## drawables
export(drawfont, drawtext)

## object manipulation
export(paintObjects, rmObjects, reenumerate)

## features extraction
export(getFeatures, hullFeatures, edgeProfile, edgeFeatures)
export(cmoments, smoments, rmoments, moments)
export(haralickMatrix, haralickFeatures, zernikeMoments)

## deprecated
export(stopIfNotImage)
export(matchObjects, frameDist)
export(morphKern, mkbox, mkball)
export(header, assert)
export(chooseImage)
export(cgamma, contrast, enhance, modulate)
export(denoise, mediansmooth, despeckle, sharpen, umask, noise)
export(negate, normalize2)
export(athresh, cthresh)
export(edge, segment)
export(affinet, resample)
